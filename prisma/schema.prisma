generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Playbook {
  id              Int      @id @default(autoincrement())
  playbookId      String   @unique
  title           String
  category        String
  severity        String
  scenario        String   @db.Text
  detection       String   @db.Text
  mitre           String?
  phases          Json
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String   
  role      String   @default("VIEWER") // "ADMIN" hoáº·c "VIEWER"
  createdAt DateTime @default(now())
}