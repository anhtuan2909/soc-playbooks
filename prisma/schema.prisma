generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Playbook {
  id              Int      @id @default(autoincrement())
  playbookId      String   @unique
  title           String
  category        String
  severity        String
  scenario        String   @db.Text
  detection       String   @db.Text
  mitre           String?
  phases          Json
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String   
  role      String   @default("VIEWER") // "ADMIN" hoặc "VIEWER"
  createdAt DateTime @default(now())
}
// ... (Model Playbook và User giữ nguyên) ...

// BẢNG MỚI: DÙNG ĐỂ AI TÌM KIẾM
model PlaybookEmbedding {
  id         Int      @id @default(autoincrement())
  playbookId String   @unique // Liên kết với PB-01, PB-02...
  content    String   // Nội dung text của playbook
  embedding  Unsupported("vector(768)") // Vector 768 chiều của Gemini

  // DÒNG NÀY ĐÃ BỊ XÓA (@@index...)
}